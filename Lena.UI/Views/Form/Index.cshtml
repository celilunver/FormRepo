@{
    ViewBag.Title = "Formlar";
}
<div class="row" ng-controller="listFormsCtrl">
    <table class="table table-striped">
        <thead>
            
            <tr>
                <th>İsim
                        <input type="text" class="form-control" placeholder="Ara" ng-model="searchText" />
                </th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in forms | filter:searchText">
                <td>{{item.Name}}</td>
                <td>{{item.Description}}</td>
                <td>{{ item.CreatedAt | mydate | date: 'dd-MM-yyyy HH:mm'}}</td>
                <td><a href="/forms/{{item.Id}}">Görüntüle</a></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createNewForm">
                        Yeni Form Oluştur
                    </button>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="modal fade" id="createNewForm" tabindex="-1" role="dialog" aria-labelledby="createNewFormLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Yeni Form Oluştur</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @{Html.RenderAction("_CreateForm", "Form"); }
            </div>
        </div>
    </div>
</div>